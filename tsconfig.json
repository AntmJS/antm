{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "skipLibCheck": false
  },
  "include": [
    "./antm.config.ts",
    "*.js",
    "packages/*/*.js",
    "packages/*/*.d.ts",
    "packages/**/src",
    "packages/**/utils",
    "packages/**/doc",
    "packages/**/ui",
    "packages/**/types",
    "packages/**/sample",
    "packages/**/__test__"
  ],
  "exclude": ["packages/**/doc/src/.temp/**", "packages/**/doc/docs/**/*.tsx"]
}
