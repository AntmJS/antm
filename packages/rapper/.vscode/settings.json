{
  "editor.snippetSuggestions": "bottom",
  "editor.formatOnSave": false,
  // 设置 eslint 保存时自动修复
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
